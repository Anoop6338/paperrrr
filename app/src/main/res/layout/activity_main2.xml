<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">



        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/anoop2" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        app:srcCompat="@drawable/anoop_img4" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/anoop_img5" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/anoop_img11" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/anoop_img22" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/anoop_img25" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="match_parent"
                        android:layout_height="850dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/anoop_img26" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/anoop_img27" />
                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/kavita_img30" />
                </LinearLayout>
            </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>